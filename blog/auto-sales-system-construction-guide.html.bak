<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Intersection Observer APIでスクロール時の見出しを監視
        // IDが付与されているh2とh3要素を取得
        const headings = document.querySelectorAll('.article-content h2[id], .article-content h3[id]');
        const tocLinks = document.querySelectorAll('.toc-list a');

        // headings.forEach(heading => console.log(heading.id)); // デバッグ用

        const observerOptions = {
            root: null, // ビューポートをルートとする
            rootMargin: '0px 0px -50% 0px', // ビューポートの中央50%で見出しを判定
            threshold: 0 // 見出しが少しでもビューポートに入ったら発火
        };

        const observer = new IntersectionObserver((entries, observer) => {
            // 現在表示されている見出しを一時的に保持するSet
            const visibleHeadings = new Set();

            entries.forEach(entry => {
                const id = entry.target.getAttribute('id');
                if (entry.isIntersecting) {
                    visibleHeadings.add(id);
                } 
            });

            // すべての目次リンクのアクティブクラスを削除
            tocLinks.forEach(link => link.classList.remove('active'));

            // visibleHeadingsの中で最も上にある見出しに対応する目次をアクティブにする
            // IntersectionObserverのrootMarginでビューポート中央を基準にしているため、
            // 厳密に「最も上」というよりは「最初に中央に到達した」見出しがアクティブになりやすい
            if (visibleHeadings.size > 0) {
                // visibleHeadingsのIDリストを、HTML上の出現順に並べ替える
                const sortedVisibleHeadings = Array.from(headings)
                    .filter(heading => visibleHeadings.has(heading.id))
                    .map(heading => heading.id);

                if (sortedVisibleHeadings.length > 0) {
                    // ソートされたリストの最初の要素が、現在ビューポート中央付近にある最も上の見出し
                    const firstVisibleHeadingId = sortedVisibleHeadings[0];
                    const activeTocLink = document.querySelector(`.toc-list a[href="#${firstVisibleHeadingId}"]`);
                    if (activeTocLink) {
                        activeTocLink.classList.add('active');
                    }
                }
            }


        }, observerOptions);

        // 全ての見出しを監視対象に設定
        headings.forEach(heading => {
            observer.observe(heading);
        });

        // 目次リンククリック時のスムーズスクロール（必要であれば）
        tocLinks.forEach(link => {
             link.addEventListener('click', function(event) {
                 event.preventDefault(); // デフォルトのリンク遷移をキャンセル
                 const targetId = this.getAttribute('href').substring(1);
                 const targetElement = document.getElementById(targetId);

                 if (targetElement) {
                     // スムーズスクロールを実行
                     window.scrollTo({
                         top: targetElement.offsetTop - 80, // 固定Headerの高さなどを考慮して調整
                         behavior: 'smooth'
                     });
                      // URLのハッシュも更新する（オプション）
                      history.pushState(null, null, `#${targetId}`);
                 }
             });
        });

        // ハンバーガーメニューの開閉機能（簡易実装）
        const hamburgerButton = document.querySelector('.hamburger-button');
        const mobileNav = document.querySelector('.global-nav.sp-nav');

        if (hamburgerButton && mobileNav) {
             hamburgerButton.addEventListener('click', function() {
                 // mobileNav.style.display = mobileNav.style.display === 'block' ? 'none' : 'block'; // display切り替えではなくクラスで制御推奨
                 mobileNav.classList.toggle('is-open');
             });

             // メニュー外をクリックしたら閉じる（簡易）
             document.addEventListener('click', function(event) {
                  if (!hamburgerButton.contains(event.target) && !mobileNav.contains(event.target)) {
                       mobileNav.classList.remove('is-open');
                  }
             });
             // メニュー項目をクリックしたら閉じる
             mobileNav.querySelectorAll('a').forEach(link => {
                  link.addEventListener('click', function() {
                       mobileNav.classList.remove('is-open');
                  });
             });
        }

    });
</script>

